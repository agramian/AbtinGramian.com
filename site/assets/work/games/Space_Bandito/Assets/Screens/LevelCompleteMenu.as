package Assets.Screens{		import com.Engine.events.APEvent;	import com.greensock.*;	import com.greensock.easing.*;	import flash.display.Sprite;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;	import com.Engine.Sound.SoundEngine;		public class LevelCompleteMenu extends Sprite {				public var continueButton:SimpleButton;		public var levelNameText:TextField;		public var levelNumber:int;		protected var se:SoundEngine;				public function LevelCompleteMenu() {			addEventListener(Event.ADDED_TO_STAGE, addedToStage, false, 0, true);			se = SoundEngine.getInstance();		}				public function setLevelInfo(name:String,number:int):void {			levelNameText.text = name;			levelNumber = number;		}				private function addedToStage(e:Event):void {			TweenLite.from(this, .4, { y : -height } );			continueButton.addEventListener(MouseEvent.CLICK, continueButtonClick, false, 0, true);			continueButton.addEventListener(MouseEvent.MOUSE_OVER, continueButtonOver, false, 0, true);		}				private function continueButtonOver(e:MouseEvent) {			se.playSound("menuOverSound");		}				private function continueButtonClick(e:MouseEvent):void {			se.playSound("menuDownSound");			parent.dispatchEvent(new APEvent(APEvent.EXIT_LEVEL));			continueButton.removeEventListener(MouseEvent.CLICK, continueButtonClick);			continueButton.removeEventListener(MouseEvent.MOUSE_OVER, continueButtonOver);			TweenLite.to(this, .4, { y : -height, onComplete:parent.removeChild, onCompleteParams:[this] } );		}			}}