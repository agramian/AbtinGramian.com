package Assets.Screens{		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.text.TextField;	import flash.events.Event;	import flash.events.MouseEvent;	import com.Engine.events.APEvent;	import com.Engine.Sound.SoundEngine;		/**	 * CLASS FOR POST-GAME RESULTS SCREEN	 */		public class Results extends MovieClip {				public var movesMadeText:TextField;		public var finalTimeText:TextField;		public var mainMenuButton:SimpleButton;		public var creditsButton:SimpleButton;		protected var se:SoundEngine;				public function Results() {			addEventListener(Event.ADDED_TO_STAGE, addedToStage, false, 0, true);			se = SoundEngine.getInstance();		}				private function addedToStage(e:Event):void {			mainMenuButton.addEventListener(MouseEvent.CLICK, mainMenuClick, false, 0, true);			mainMenuButton.addEventListener(MouseEvent.MOUSE_OVER, mainMenuOver, false, 0, true);			creditsButton.addEventListener(MouseEvent.CLICK, creditsClick, false, 0, true);			creditsButton.addEventListener(MouseEvent.MOUSE_OVER, creditsOver, false, 0, true);		}				private function mainMenuOver(e:MouseEvent) {			se.playSound("menuOverSound");		}				private function mainMenuClick(e:MouseEvent):void {			se.playSound("menuDownSound");			mainMenuButton.removeEventListener(MouseEvent.CLICK, mainMenuClick);			mainMenuButton.removeEventListener(MouseEvent.MOUSE_OVER, mainMenuOver);			creditsButton.removeEventListener(MouseEvent.CLICK, creditsClick);			creditsButton.removeEventListener(MouseEvent.MOUSE_OVER, creditsOver);			dispatchEvent(new APEvent(APEvent.MAIN_MENU));		}				private function creditsOver(e:MouseEvent) {			se.playSound("menuOverSound");		}				private function creditsClick(e:MouseEvent):void {			se.playSound("menuDownSound");			mainMenuButton.removeEventListener(MouseEvent.CLICK, mainMenuClick);			mainMenuButton.removeEventListener(MouseEvent.MOUSE_OVER, mainMenuOver);			creditsButton.removeEventListener(MouseEvent.CLICK, creditsClick);			creditsButton.removeEventListener(MouseEvent.MOUSE_OVER, creditsOver);			dispatchEvent(new APEvent(APEvent.FRAME_CREDITS));		}			}	}