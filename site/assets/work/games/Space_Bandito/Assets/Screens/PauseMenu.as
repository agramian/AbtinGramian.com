package Assets.Screens{		import com.Engine.events.APEvent;	import com.greensock.*;	import com.greensock.easing.*;	import flash.display.Sprite;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.MouseEvent;	import com.Engine.Sound.SoundEngine;		public class PauseMenu extends Sprite {				public var resumeButton:SimpleButton;		public var quitButton:SimpleButton;		protected var se:SoundEngine;				public function PauseMenu() {			addEventListener(Event.ADDED_TO_STAGE, addedToStage, false, 0, true);			se = SoundEngine.getInstance();		}				private function addedToStage(e:Event):void {			TweenLite.from(this, .4, { y : -height } );			resumeButton.addEventListener(MouseEvent.CLICK, resumeButtonClick, false, 0, true);			resumeButton.addEventListener(MouseEvent.MOUSE_OVER, resumeButtonOver, false, 0, true);			quitButton.addEventListener(MouseEvent.CLICK, quitButtonClick, false, 0, true);			quitButton.addEventListener(MouseEvent.MOUSE_OVER, quitButtonOver, false, 0, true);		}				private function resumeButtonOver(e:MouseEvent):void {			se.playSound("menuOverSound");		}				private function resumeButtonClick(e:MouseEvent):void {			se.playSound("menuDownSound");			parent.dispatchEvent(new APEvent(APEvent.HIDE_PAUSE));			resumeButton.removeEventListener(MouseEvent.CLICK, resumeButtonClick);			resumeButton.removeEventListener(MouseEvent.MOUSE_OVER, resumeButtonOver);			quitButton.removeEventListener(MouseEvent.CLICK, quitButtonClick);			quitButton.removeEventListener(MouseEvent.MOUSE_OVER, quitButtonOver);			TweenLite.to(this, .4, { y : -height, onComplete:parent.removeChild, onCompleteParams:[this] } );		}				private function quitButtonOver(e:MouseEvent):void {			se.playSound("menuOverSound");		}				private function quitButtonClick(e:MouseEvent):void {			se.playSound("menuDownSound");			resumeButton.removeEventListener(MouseEvent.CLICK, resumeButtonClick);			resumeButton.removeEventListener(MouseEvent.MOUSE_OVER, resumeButtonOver);			quitButton.removeEventListener(MouseEvent.CLICK, quitButtonClick);			quitButton.removeEventListener(MouseEvent.MOUSE_OVER, quitButtonOver);			TweenLite.to(this, .4, { y : -height, onComplete:parent.removeChild, onCompleteParams:[this] } );			TweenLite.delayedCall(0.25, parent.dispatchEvent, [new APEvent(APEvent.GAME_OVER)], false);		}			}}