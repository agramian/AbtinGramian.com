package Assets.Screens{		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.MouseEvent;	import com.Engine.events.APEvent;	import com.Engine.Sound.SoundEngine;		/**	 * CLASS FOR PRE-GAME TITLE SCREEN	 */		public class Title extends MovieClip {				public var playButton:SimpleButton;		public var rulesButton:SimpleButton;		protected var se:SoundEngine;				public function Title() {			se = SoundEngine.getInstance();		}				public function addButtonListeners():void {			playButton.addEventListener(MouseEvent.CLICK, playButtonClick, false, 0, true);			playButton.addEventListener(MouseEvent.MOUSE_OVER, overPlay, false, 0, true);			rulesButton.addEventListener(MouseEvent.CLICK, rulesButtonClick, false, 0, true);			rulesButton.addEventListener(MouseEvent.MOUSE_OVER, overRules, false, 0, true);		}				private function overRules(e:MouseEvent):void {			se.playSound("menuOverSound");		}				private function overPlay(e:MouseEvent):void {			se.playSound("menuOverSound");		}				private function playButtonClick(e:MouseEvent):void {			se.playSound("menuDownSound");			playButton.removeEventListener(MouseEvent.CLICK, playButtonClick);			playButton.removeEventListener(MouseEvent.MOUSE_OVER, overPlay);			rulesButton.removeEventListener(MouseEvent.CLICK, rulesButtonClick);			rulesButton.removeEventListener(MouseEvent.MOUSE_OVER, overRules);			dispatchEvent(new APEvent(APEvent.PLAY_GAME));		}				private function rulesButtonClick(e:MouseEvent):void {			se.playSound("menuDownSound");			dispatchEvent(new APEvent(APEvent.SHOW_CONTROLS));		}	}	}