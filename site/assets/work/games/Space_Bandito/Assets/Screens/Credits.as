package Assets.Screens{		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.text.TextField;	import flash.events.Event;	import flash.events.MouseEvent;	import com.Engine.events.APEvent;	import com.Engine.Sound.SoundEngine;		/**	 * CLASS FOR POST-GAME RESULTS SCREEN	 */		public class Credits extends MovieClip {				public var mainMenuButton:SimpleButton;		protected var se:SoundEngine;				public function Credits() {			addEventListener(Event.ADDED_TO_STAGE, addedToStage, false, 0, true);			se = SoundEngine.getInstance();		}				private function addedToStage(e:Event):void {			mainMenuButton.addEventListener(MouseEvent.CLICK, mainMenuClick, false, 0, true);			mainMenuButton.addEventListener(MouseEvent.MOUSE_OVER, mainMenuOver, false, 0, true);		}				private function mainMenuOver(e:MouseEvent) {			se.playSound("menuOverSound");		}				private function mainMenuClick(e:MouseEvent):void {			se.playSound("menuDownSound");			mainMenuButton.removeEventListener(MouseEvent.CLICK, mainMenuClick);			mainMenuButton.removeEventListener(MouseEvent.MOUSE_OVER, mainMenuOver);			dispatchEvent(new APEvent(APEvent.MAIN_MENU));		}			}	}